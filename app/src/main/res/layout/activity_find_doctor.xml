            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            app:cardBackgroundColor="#A578F3"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
